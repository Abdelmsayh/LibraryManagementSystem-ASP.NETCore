@model BookDTO
@inject SignInManager<ApplicationUser> _signInManager


@{
    ViewBag.Title = "Top Rate For Book";
}

<div class="content-wrapper">
    <!-- Header -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Book Details</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Book" asp-action="Index">Book List</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title">🗂️ Details for @Model.Title</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Book Title</label>
                            <input asp-for="Title" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label>Book Author</label>
                            <input asp-for="Author" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Published Year</label>
                            <input asp-for="PublishedYear" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label>Book Rating</label>
                            <input asp-for="Rating" class="form-control" readonly />
                        </div>
                    </div>


                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Category</label>
                            <input asp-for="Category.CategoryName" class="form-control" readonly />
                        </div>
                        
                    </div>

                    <div class="text-center mt-3">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-primary me-2">Return</a>
                         @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin")){
                                     <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success me-2">Update</a>
                                     <a asp-controller="Book" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-warning">Delete</a>
                         }

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
