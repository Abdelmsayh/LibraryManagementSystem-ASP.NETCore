@model BookDTO

@{
    ViewBag.Title = "Create Book";
}

@section JqueryValidation {
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
<div class="content-wrapper">
    <!-- Header -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Create New Book</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-controller="Book" asp-action="Index">Books List</a>
                        </li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-whit">
                    <h3 class="card-title mb-0">📚 Add New Book</h3>
                    <div class="card-tools">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                    
                </div>
                    
                

                <div class="card-body">
                    <form asp-action="Create" asp-controller="Book" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Title" class="form-label fw-bold"></label>
                                <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Author" class="form-label fw-bold"></label>
                                <input asp-for="Author" class="form-control" placeholder="Enter author name" />
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="PublishedYear" class="form-label fw-bold"></label>
                                <input asp-for="PublishedYear" class="form-control" type="number" min="1000" max="2099" />
                                <span asp-validation-for="PublishedYear" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ISBN" class="form-label fw-bold"></label>
                                <input asp-for="ISBN" class="form-control" placeholder="Enter ISBN number" />
                                <span asp-validation-for="ISBN" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Rating" class="form-label fw-bold"></label>
                                <input asp-for="Rating" class="form-control" type="number" min="0" max="5" step="0.1" />
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="IsAvailable" class="form-label fw-bold d-block ml-5"></label>
                                <select asp-for="IsAvailable" class="form-select ml-5">
                                    <option value="">-- Select Availability --</option>
                                    <option value="true">Available</option>
                                    <option value="false">Unavailable</option>
                                </select>
                                <span asp-validation-for="IsAvailable" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="CategoryId" class="form-label fw-bold d-block"></label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save"></i> Save
                            </button>
                            <button type="reset" class="btn btn-secondary px-4 ms-2">
                                <i class="fas fa-undo"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

