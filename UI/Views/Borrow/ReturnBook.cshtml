@model BLL.Models.BorrowingTransactionDTO

@{
    ViewBag.Title = "Confirm Book Return";
}

<div class="content-wrapper">
    <div class="content-header py-3 border-bottom mb-4">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h3 class="m-0 text-primary fw-bold">
                <i class="fas fa-undo me-2"></i>
                Confirm Return: <span class="text-dark">@Model.Member?.FullName</span>
            </h3>
            <ol class="breadcrumb float-sm-right mb-0">
                <li class="breadcrumb-item"><a asp-controller="Borrow" asp-action="Index">Transactions List</a></li>
                <li class="breadcrumb-item active text-primary">Return</li>
            </ol>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid d-flex justify-content-center">
            <div class="card shadow-lg w-75 border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i> Confirmation Required</h5>
                </div>

                <div class="card-body bg-light">

                 

                    <form asp-action="ReturnBook" asp-controller="Borrow" method="post" class="needs-validation">

                        <input type="hidden" name="transactionId" value="@Model.Id" />
                    

                        <h4 class="text-info mb-3">Transaction Details </h4>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Member Name</label>
                                <input type="text" class="form-control" value="@(Model.Member?.FullName ?? "N/A")" readonly />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Borrow Date</label>
                                <input type="text" class="form-control" value="@Model.BorrowingDate.ToShortDateString()" readonly />
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Due Date</label>
                                <input type="text" class="form-control" value="@Model.DueDate.ToShortDateString()" readonly />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Current Fine (Estimated)</label>
                                <input type="text" class="form-control" value="@Model.FineAmount.ToString("C")" readonly />
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-4 me-2">
                                <i class="fas fa-check me-1"></i> Confirm Return
                            </button>
                            <a asp-controller="Borrow" asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-muted text-center small">
                    <i class="fas fa-book-reader me-1"></i> Library Management System
                </div>
            </div>
        </div>
    </section>
</div>