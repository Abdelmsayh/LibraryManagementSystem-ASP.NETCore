@model List<UserInRoleDTO>

@{
    ViewBag.Title = "Add Or Remove Users";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Add Or Remove Users</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Roles</a></li>
                        <li class="breadcrumb-item active">Role Card</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white ">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users"></i> Assign Users to Role
                    </h3>

                    <div class="card-tools">

                        <div class="dropdown">
                            <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="filterDropdown"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="filterDropdown">
                                <a class="dropdown-item" href="#" onclick="filterUsers('all')">
                                    <i class="fas fa-list"></i> All Users
                                </a>
                                <a class="dropdown-item" href="#" onclick="filterUsers('selected')">
                                    <i class="fas fa-check-circle text-success"></i> Selected Only
                                </a>
                                <a class="dropdown-item" href="#" onclick="filterUsers('unselected')">
                                    <i class="fas fa-times-circle text-danger"></i> Unselected Only
                                </a>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-body">
                    <form method="post" class="form-group">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-center" style="width: 50px;">#</th>
                                        <th>User Name</th>
                                        <th class="text-center">Select</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td class="text-center">@(i + 1)</td>
                                            <td>@Model[i].UserName</td>
                                            <td class="text-center">
                                                <input asp-for="@Model[i].IsSelected" type="checkbox" class="form-check-input" />
                                            </td>

                                            <input type="hidden" asp-for="@Model[i].UserId" />
                                            <input type="hidden" asp-for="@Model[i].UserName" />
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success px-4 me-2">
                                <i class="fas fa-save"></i> Assign
                            </button>
                            <a asp-controller="Role" asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- ==================== Scripts ==================== -->

@section JqueryValidation{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
}
<script>
    function filterUsers(filterType) {
        $("table tbody tr").each(function () {
            const isChecked = $(this).find("input[type='checkbox']").prop("checked");

            if (filterType === "all") {
                $(this).show();
            } else if (filterType === "selected") {
                isChecked ? $(this).show() : $(this).hide();
            } else if (filterType === "unselected") {
                isChecked ? $(this).hide() : $(this).show();
            }
        });
    }
</script>
