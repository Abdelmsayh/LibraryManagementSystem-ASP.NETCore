@model IEnumerable<BLL.Models.ReservationTransactionDTO>

@{
    ViewData["Title"] = "Reservation Transactions";
    // Get the current date/time to check for expiration status on the client side
    var today = DateTime.Now.Date;
}

@* --- DataTables CSS Section (Unchanged) --- *@
@section DataTabel {
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

@* --- DataTables JS Imports Section (Unchanged) --- *@
@section JqueryValidation {
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/jszip/jszip.min.js"></script>
    <script src="~/plugins/pdfmake/pdfmake/vfs_fonts.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
}

@* --- DataTables Initialization Script (Unchanged) --- *@
@section Scripts {
    <script>
        $(function () {
            $("#reservationTable").DataTable({
                responsive: true,
                lengthChange: true,
                autoWidth: false,
                buttons: ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#reservationTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}

<div class="content-wrapper">
    @* --- Header (Unchanged) --- *@
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Reservation Transactions</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Reservation List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @* --- Main content --- *@
    <section class="content">
        <div class="container-fluid">
            @* Optional: Display TempData messages from controller actions (Unchanged) *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">📝 Book Reservations</h3>

                    <div class="card-tools">
                        <a asp-controller="Reservation" asp-action="Create" class="btn btn-light btn-sm">
                            <i class="fas fa-plus"></i> New Reservation
                        </a>
                    </div>

                </div>

                <div class="card-body">
                    <table id="reservationTable" class="table table-bordered table-hover table-striped align-middle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Member</th>
                                <th>Book Title</th>
                                <th>Reservation Date</th>
                                <th>Expiration Date</th> @* Renamed column to match DTO's DueDate function in this context *@
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var index = 1;
                                foreach (var item in Model)
                                {
                                    // Status Logic: Check IsActive first, then check if DueDate has passed.
                                    string statusClass = "bg-secondary";
                                    string statusText = "Inactive";
                                    bool isActionable = false;

                                    if (item.IsActive)
                                    {
                                        if (item.DueDate.Date >= today)
                                        {
                                            statusClass = "bg-success";
                                            statusText = "Active";
                                            isActionable = true;
                                        }
                                        else
                                        {
                                            statusClass = "bg-warning text-dark";
                                            statusText = "Expired";
                                        }
                                    }
                                    else
                                    {
                                        // Since IsActive is false, we assume it was cancelled/expired/used
                                        statusClass = "bg-danger";
                                        statusText = "Cancelled/Closed";
                                    }

                                    <tr>
                                        <td class="text-center">@index</td>
                                        <td>@(item.Member?.FullName ?? "N/A")</td>
                                        <td>@(item.Book?.Title ?? "N/A")</td>
                                        <td>@item.ReservationDate.ToShortDateString()</td>
                                        <td>@item.DueDate.ToShortDateString()</td> @* Displaying DueDate as Expiration Date *@
                                        <td>
                                            <span class="badge @statusClass">@statusText</span>
                                        </td>
                                        <td class="text-center">

                                            <a class="btn btn-danger btn-sm" asp-controller="Reservation" asp-action="Cancel" asp-route-Id="@item.Id">
                                                <i class="fas fa-times-circle mr-1"></i> Cancel
                                            </a>

                             

                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-3">
                                        No reservation transactions found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>