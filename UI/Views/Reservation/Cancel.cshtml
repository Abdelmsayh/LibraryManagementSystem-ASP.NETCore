@model ReservationTransactionDTO

@{
    ViewBag.Title = "Cancel Reservation Transaction";
}

<div class="content-wrapper">
    <div class="content-header py-3 border-bottom mb-4">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h3 class="m-0 text-danger fw-bold">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Cancel Reservation
            </h3>
            <ol class="breadcrumb float-sm-right mb-0">
                <li class="breadcrumb-item"><a asp-controller="Reservation" asp-action="Index">Reservation List</a></li>
                <li class="breadcrumb-item active text-danger">Cancel</li>
            </ol>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid d-flex justify-content-center">
            <div class="card shadow-lg w-75 border-0">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Confirm Cancel</h5>
                </div>

                <div class="card-body bg-light">
                    <form asp-controller="Reservation" asp-action="Cancel" method="post" class="needs-validation">
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Member</label>
                                <input type="text" class="form-control"
                                       value="@(Model?.Member != null ? Model.Member.FullName : "Unknown Member")" readonly />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Book</label>
                                <input type="text" class="form-control"
                                       value="@(Model?.Book != null ? Model.Book.Title : "Unknown Book")" readonly />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Due Date</label>
                                <input type="text" class="form-control"
                                       value="@(Model?.DueDate.ToString("yyyy-MM-dd") ?? "—")" readonly />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Reservation Date</label>
                                <input type="text" class="form-control"
                                       value="@(Model?.ReservationDate.ToString("yyyy-MM-dd") ?? "—")" readonly />
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger px-4 me-2">
                                <i class="fas fa-ban me-1"></i> Cancel Reservation
                            </button>
                            <a asp-controller="Reservation" asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fas fa-times me-1"></i> Return
                            </a>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-muted text-center small">
                    <i class="fas fa-info-circle me-1"></i> This action will cancel it permanently.
                </div>
            </div>
        </div>
    </section>
</div>
