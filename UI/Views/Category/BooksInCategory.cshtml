@model IEnumerable<BookDTO>
@inject SignInManager<ApplicationUser> _signInManager

@{
    ViewBag.Title = $"Books in {ViewBag.Category?.CategoryName ?? "Category"}";
}

<div class="content-wrapper">
    <!-- Header -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary">
                        📚 Books in @ViewBag.Category?.CategoryName
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Categories</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Category?.CategoryName</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">
                        📖 Available Books in @ViewBag.Category?.CategoryName
                    </h3>
                </div>

                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-bordered table-striped text-center">
                            <thead class="table-primary">
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Published Year</th>
                                    <th>Rating</th>
                                    <th>Available</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model)
                                {
                                    <tr>
                                        <td>@book.Title</td>
                                        <td>@book.Author</td>
                                        <td>@book.PublishedYear</td>
                                        <td>@book.Rating</td>
                                        <td>
                                            @if (book.IsAvailable)
                                            {
                                                <span class="badge bg-success">Available</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Unavailable</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> View
                                            </a>

                                            @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin")){
                                            
                                                  <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm">
                                                         <i class="fas fa-edit"></i> Edit
                                                 </a>
                                            }
                                           
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-exclamation-circle"></i> No books found in this category.
                        </div>
                    }
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Categories
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>
