@model IEnumerable<BLL.Models.MemberDTO>
@inject SignInManager<ApplicationUser> _signInManager

@{
    ViewData["Title"] = "Members List";
}

@section DataTabel {
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

@section JqueryValidation {
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/jszip/jszip.min.js"></script>
    <script src="~/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
}

@section Scripts {
    <script>
        $(function () {
            $("#membersTable").DataTable({
                responsive: true,
                lengthChange: true,
                autoWidth: true,
                buttons: ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#membersTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}

<div class="content-wrapper">
    <!-- Header -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Members</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Members List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">👥 Active Members</h3>
                    <div class="card-tools">
                         @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin")){
                              <a asp-controller="Member" asp-action="Create" class="btn btn-light btn-sm">
                                 <i class="fas fa-plus"></i> Add New Member
                             </a>
                         }
                       
                    </div>
                    
                </div>

                <div class="card-body">
                    <table id="membersTable" class="table table-bordered table-hover table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Start Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                                <th>For Member</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var index = 1;
                                foreach (var member in Model)
                                {
                                    <tr>
                                        <td class="text-center">@index</td>
                                        <td>@member.FullName</td>
                                        <td>@member.Email</td>
                                        <td>@member.Phone</td>
                                        <td>@member.MembershipStartDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            @if (member.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="Member" asp-action="Details" asp-route-id="@member.Id" class="btn btn-info btn-sm">
                                                Details
                                            </a>
                                            <a asp-controller="Member" asp-action="Edit" asp-route-id="@member.Id" class="btn btn-warning btn-sm">
                                                Edit
                                            </a>
                                             @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin")){
                                                  <a asp-controller="Member" asp-action="Delete" asp-route-id="@member.Id" class="btn btn-danger btn-sm m-1">
                                                         Delete
                                                   </a>
                                             }
                                           
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-outline-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                                                    Actions
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" asp-controller="Member" asp-action="Profile" asp-route-id="@member.Id">
                                                        <i class="fas fa-user"></i> Profile
                                                    </a>
                                                    <a class="dropdown-item" asp-controller="Member" asp-action="Fines" asp-route-id="@member.Id">
                                                        <i class="fas fa-money-bill"></i> Fines
                                                    </a>
                                                    <a class="dropdown-item" asp-controller="Member" asp-action="BorrowedBooks" asp-route-id="@member.Id">
                                                        <i class="fas fa-book"></i> Borrowed Books
                                                    </a>
                                                    <a class="dropdown-item" asp-controller="Member" asp-action="CanBorrow" asp-route-id="@member.Id">
                                                        <i class="fas fa-check-circle"></i> Can Borrow
                                                    </a>
                                                </div>
                                            </div>
                                        </td>

                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-3">
                                        No members found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
